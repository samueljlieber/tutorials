<?xml version="1.1" encoding="UTF-8"?>

<odoo>

    <record id="real_estate_tag_list_view" model="ir.ui.view">
        <field name="name">Tags</field>
        <field name="model">real.estate.tag</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
                <field name="property_ids" widget="many2many" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
            </list>
        </field>
    </record>

</odoo>